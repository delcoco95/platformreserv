rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Règles pour la collection users
    match /users/{userId} {
      // L'utilisateur peut lire et écrire uniquement son propre profil
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Tous les utilisateurs authentifiés peuvent lire les profils des professionnels
      allow read: if request.auth != null && resource.data.userType == 'professionnel';
    }
    
    // Règles pour la collection appointments
    match /appointments/{appointmentId} {
      // Seuls les clients et professionnels concernés peuvent accéder aux rendez-vous
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.clientId || 
         request.auth.uid == resource.data.professionalId);
      
      // Création de nouveaux rendez-vous
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.clientId;
    }
    
    // Règles pour la collection reviews
    match /reviews/{reviewId} {
      // Les avis peuvent être lus par tous les utilisateurs authentifiés
      allow read: if request.auth != null;
      
      // Seul le client qui a pris le rendez-vous peut créer un avis
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.clientId;
        
      // Le client peut modifier son propre avis
      allow update: if request.auth != null && 
        request.auth.uid == resource.data.clientId;
    }
  }
}
